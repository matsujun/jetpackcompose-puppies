<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/nav_list"
    >

    <fragment
        android:id="@+id/nav_list"
        android:name="dev.matsujun.puppies.list.ListFragment"
        android:label="List" >

        <action
            android:id="@+id/action_nav_list_to_nav_detail"
            app:destination="@id/nav_detail" />
    </fragment>

    <fragment
        android:id="@+id/nav_detail"
        android:name="dev.matsujun.puppies.detail.DetailFragment"
        android:label="Detail">
        <argument
            android:name="puppyId"
            app:argType="integer" />
    </fragment>
</navigation>